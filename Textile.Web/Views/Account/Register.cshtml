@using Textile.Web.Models
@model RegisterViewModel
@{
    ViewBag.Title = "Log in";
    Layout = null;
}
<link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Open+Sans'>
<link rel="stylesheet" href="~/css/style.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<body>
    <!-- partial:index.partial.html -->
    <div class="cont">
        <div class="demo">
            <div class="login">

                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                   // @Html.AntiForgeryToken()

                    <div class="login__form" style="top:5%">
                        <div class="login__row">
                            <svg class="login__icon name svg-icon" viewBox="0 0 20 20">
                                <path d="M0,20 a10,8 0 0,1 20,0z M10,0 a4,4 0 0,1 0,8 a4,4 0 0,1 0,-8" />
                            </svg>
                            @Html.TextBoxFor(m => m.UserName, new { @class = "login__input name", @placeholder = "Nom utilisateur" })
                        </div>
                        <div class="login__row">
                            <svg class="login__icon name svg-icon" viewBox="0 0 20 20">
                                <path d="M0,20 a10,8 0 0,1 20,0z M10,0 a4,4 0 0,1 0,8 a4,4 0 0,1 0,-8" />
                            </svg>
                            @Html.TextBoxFor(m => m.Nom, new { @class = "login__input name", @placeholder = "Nom" })
                        </div>
                        <div class="login__row">
                            <svg class="login__icon name svg-icon" viewBox="0 0 20 20">
                                <path d="M0,20 a10,8 0 0,1 20,0z M10,0 a4,4 0 0,1 0,8 a4,4 0 0,1 0,-8" />
                            </svg>
                            @Html.TextBoxFor(m => m.Prenom, new { @class = "login__input name", @placeholder = "Prenom" })
                        </div>
                        <div class="login__row">
                            <svg class="login__icon pass svg-icon" viewBox="0 0 20 20">
                                <path d="M0,20 20,20 20,8 0,8z M10,13 10,16z M4,8 a6,8 0 0,1 12,0" />
                            </svg>
                            @Html.PasswordFor(m => m.Password, new { @class = "login__input pass", @placeholder = "Mot de passe" })
                        </div>
                        <div class="login__row">
                            <svg class="login__icon pass svg-icon" viewBox="0 0 20 20">
                                <path d="M0,20 20,20 20,8 0,8z M10,13 10,16z M4,8 a6,8 0 0,1 12,0" />
                            </svg>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "login__input pass", @placeholder = "Confirmer mot de passe" })
                        </div>
                        <button type="submit" class="login__submit">Register</button>

                        @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
                        {
                            <div class="alert alert-danger">
                                @Html.ValidationSummary("", new { @class = "text-danger", @style = "font-size: 16px;color: red;" })
                            </div>
                        }


                    </div>
                }
            </div>

        </div>
    </div>
    <!-- partial -->
    <script src="~/Scripts/script.js" type="text/javascript"></script>
</body>