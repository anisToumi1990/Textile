<script type="text/javascript">
    $("#collapseAdministration").addClass("show");
    $("#clientHref").addClass("active");
    $("#_administration").addClass("active");
</script>

<style type="text/css">
    input[type=text], select {
        text-align: center;
        text-align-last: center;
    }
</style>
<input type="hidden" id="IDClient" value="@ViewBag.ID" />
<div class="card shadow mb-4">
    <div class="card-header py-3">

        <h2 class="h3 mb-0 text-gray-800">
            <a href="/Administration/Customer">
                <i class="fa fa-arrow-left" aria-hidden="true"></i>
            Client</a> :  @ViewBag.Client
        </h2>

        <button onclick="OpenPaymentEditor(0)" style="float:right" class="btn btn-success btn-icon-split">
            <span class="icon text-white-50">
                <i class="fas fa-plus"></i>
            </span>
            <span class="text">Ajouter</span>
        </button>
    </div>
    <div class="card-footer py-3">
        <div class="row">
            <div class="col-xl-4 col-md-6 mb-4">
                <div class="card border-left-success shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                    Montant Total des Factures:
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    <label id="payrollAmount"></label>
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fa fa-money-bill fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-xl-4 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                    Montant Payé
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800"><label id="receivedAmount"></label></div>
                            </div>
                            <div class="col-auto">
                                <i class="fa fa-money-bill fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>



            <div class="col-xl-4 col-md-6 mb-4">
                <div class="card border-left-success shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                    Restes:
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    <label id="restAmount"></label>
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fa fa-money-bill fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-lg-6">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered dt-responsive nowrap"
                           id="PaiementGrid" style="width:100%">
                        <thead>
                            <tr>

                                <th style="text-align:center;">id</th>

                                <th style="text-align:center;"></th>

                                <th style="text-align:center;">
                                    Montant
                                </th>
                                <th style="text-align:center;">
                                    Type Paiement
                                </th>
                                <th style="text-align:center;">
                                    Date Paiement
                                </th>
                                <th style="text-align:center;">
                                    Date Echéance
                                </th>
                            </tr>
                        </thead>
                        <tbody align="center"></tbody>

                    </table>
                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-lg-6">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered dt-responsive nowrap"
                           id="VenteGrid" style="width:100%">
                        <thead>
                            <tr>

                                <th style="text-align:center;">id</th>

                                <th style="text-align:center;">
                                    Code
                                </th>

                                <th style="text-align:center;">
                                    Date Creation
                                </th>
                                <th style="text-align:center;">
                                    Status
                                </th>
                                <th style="text-align:center;">
                                    Montant Totale
                                </th>
                                <th style="text-align:center;">

                                </th>
                            </tr>
                        </thead>
                        <tbody align="center"></tbody>

                    </table>
                </div>
            </div>
        </div>

    </div>

</div>

<script type="text/javascript">
    $(document).ready(function () {
        
        var id = $("#IDClient").val();
        LoadSaleDataByCustomer(id);
        LoadPaymentData(id);
        GetAmountByCustomer(id);

    });


</script>
<script src="~/Javascript/Administration/Paiement-JS.js"></script>



