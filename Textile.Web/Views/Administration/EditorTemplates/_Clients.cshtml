@model Textile.DAL.Models.ClientModel
<form id="ParamForm">
    @Html.HiddenFor(model => model.idClient)
    <div class="container-fluid">
        <br />
        <div class="row">
            <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-landmark text-gray-400"></i></span>
                    </div>
                    @Html.TextBoxFor(model => model.Nom, new { @class = "form-control", @placeholder = "Nom du client ...", @required = true })
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-map  text-gray-400"></i></span>
                    </div>
                    @Html.TextBoxFor(model => model.Adresse, new { @class = "form-control", @placeholder = "Adresse ...", @required = true })
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-lg-6 col-md-6 col-xs-6 col-sm-6">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-phone  text-gray-400"></i></span>
                    </div>
                    @Html.TextBoxFor(model => model.NumeroTelephoe, new { @class = "form-control", @placeholder = "Numéro de téléphone", @required = true })
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-xs-6 col-sm-6">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-fax text-gray-400"></i></span>
                    </div>
                    @Html.TextBoxFor(model => model.Fax, new { @class = "form-control", @placeholder = "Fax ...", @required = true })
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            
            <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
                <div class="form-group">
                   <span class="help-block m-b-none m-b small">Matricule fiscal - Clé - Catégorie - Num étab(Exemple : 1234567-S-M-000 )</span>
                    @Html.TextBoxFor(model => model.MatriculeFiscal, new { @class = "form-control", @placeholder = "Matricule Fiscale ..." })
                </div>
                
            </div>
            
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
                <div class="form-group">
                    <span class="help-block m-b-none m-b small">IBAN - 
                        TN 59 10 006 035183598478831:</span>
                        @Html.TextBoxFor(model => model.IBAN, new { @class = "form-control", @placeholder = "IBAN ..." })
</div>

            </div>
        </div>
        <div class="row">
            
            <div class="col-lg-4 col-md-4 col-xs-4 col-sm-4">
                <div class="custom-control custom-checkbox">
                    @Html.CheckBoxFor(model => model.Exonore, new { @class = "custom-control-input" })
                    <label class="custom-control-label" for="Exonore">Exonoré</label>
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-xs-4 col-sm-4">
                <div class="custom-control custom-checkbox">
                    @Html.CheckBoxFor(model => model.Active, new { @class = "custom-control-input" })
                    <label class="custom-control-label" for="Active">Active</label>
                </div>
            </div>
        </div>
       <br />
       <br />
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-sm btn-success" onclick="AddOrUpdateCustomer()"><i class="ace-icon fa fa-check"></i> Valider</button>
        <button type="button" class="btn btn-sm" id="AnnulerP" data-dismiss="modal"><i class="ace-icon fa fa-times"></i> Annuler</button>
    </div>
</form>

<script>
    $(document).ready(function () {
        $("#MatriculeFiscal").mask("999999*-a-a-999");
    });
</script>