                openWins[curWin - 2].close();
                openWins[curWin - 2] = openWins[curWin - 1];
            }
            openWins[curWin - 1] = window.open(url, '_blank', str);
        }
        else {
            //curWin = 0;
            openWins[curWin++] = window.open(url, '_blank', str);
        }
        setTimeout(function () {
