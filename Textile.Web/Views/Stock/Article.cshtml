<script type="text/javascript">
    $("#collapseStock").addClass("show");
    $("#StockFermeHref").addClass("active");
    $("#_stock").addClass("active");
</script>

<style type="text/css">
    input[type=text], select {
        text-align: center;
        text-align-last: center;
    }
</style>
<input type="hidden" id="Code" value="@ViewBag.id" />
<div class="card shadow mb-4">
    <div class="card-header py-3">

        <h2 class="h3 mb-0 text-gray-800">
            <a  href="/Stock/References"><i class="fa fa-arrow-left" aria-hidden="true"></i> Reference</a> :  @ViewBag.Reference
           </h2>

        <button onclick="OpenArticleEditor(0)" style="float:right" class="btn btn-success btn-icon-split">
            <span class="icon text-white-50">
                <i class="fas fa-plus"></i>
            </span>
            <span class="text">Ajouter</span>
        </button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered dt-responsive nowrap"
                   id="ArticleGrid" style="width:100%">
                <thead>
                    <tr>

                        <th style="text-align:center;">id</th>

                        <th style="text-align:center;"></th>

                        <th style="text-align:center;">
                            Code Article
                        </th>
                        <th style="text-align:center;">
                            Quantite
                        </th>
                        <th style="text-align:center;">
                            Couleur
                        </th>
                        <th style="text-align:center;">
                            Date Creation
                        </th>
                        <th style="text-align:center;">
                            Date Modification
                        </th>

                    </tr>
                </thead>
                <tbody align="center"></tbody>

            </table>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        
        var Code = $("#Code").val();
        LoadArticleData(Code);
    });


</script>
<script src="~/Javascript/Stock/Article-JS.js"></script>


